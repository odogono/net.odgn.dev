---
import { getCollection } from 'astro:content';

import Layout from '@layouts/three-body.astro';

import { collections } from '../../content.config';

// Only allow access in dev mode
if (!import.meta.env.DEV) {
  return Astro.redirect('/404');
}

// Get all entries from both collections
const notes = await getCollection('notes');
const posts = await getCollection('posts');

// Helper function to format date
const formatDate = (date: Date) => date.toLocaleDateString();

// Helper function to format array
const formatArray = (arr: any[] | undefined) => arr?.join(', ') || '';

// Helper function to format boolean
const formatBoolean = (bool: boolean | undefined) => (bool ? '✓' : '✗');
---

<Layout title="Admin" description="Admin">
  <div class="space-y-8">
    <h1 class="text-2xl font-bold mb-4">Content Collections Admin</h1>

    <div class="space-y-6">
      <section>
        <h2 class="text-xl font-semibold mb-4">Notes Collection</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full border-collapse border border-gray-300">
            <thead>
              <tr class="bg-gray-100">
                <th class="border border-gray-300 p-2">Title</th>
                <th class="border border-gray-300 p-2">Published Date</th>
                <th class="border border-gray-300 p-2">Updated Date</th>
                <th class="border border-gray-300 p-2">Draft</th>
                <th class="border border-gray-300 p-2">Tags</th>
                <th class="border border-gray-300 p-2">Slug</th>
              </tr>
            </thead>
            <tbody>
              {
                notes.map(note => (
                  <tr class="hover:bg-gray-50">
                    <td class="border border-gray-300 p-2">
                      {note.data.title || '-'}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {formatDate(note.data.pubDate)}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {note.data.updatedDate
                        ? formatDate(note.data.updatedDate)
                        : '-'}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {formatBoolean(note.data.isDraft)}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {formatArray(note.data.tags)}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {note.data.slug || '-'}
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </section>

      <section>
        <h2 class="text-xl font-semibold mb-4">Posts Collection</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full border-collapse border border-gray-300">
            <thead>
              <tr class="bg-gray-100">
                <th class="border border-gray-300 p-2">Title</th>
                <th class="border border-gray-300 p-2">Description</th>
                <th class="border border-gray-300 p-2">Published Date</th>
                <th class="border border-gray-300 p-2">Updated Date</th>
                <th class="border border-gray-300 p-2">Draft</th>
                <th class="border border-gray-300 p-2">Tags</th>
                <th class="border border-gray-300 p-2">Slug</th>
                <th class="border border-gray-300 p-2">Hide Hero</th>
              </tr>
            </thead>
            <tbody>
              {
                posts.map(post => (
                  <tr class="hover:bg-gray-50">
                    <td class="border border-gray-300 p-2">
                      {post.data.title}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {post.data.description || '-'}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {formatDate(post.data.pubDate)}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {post.data.updatedDate
                        ? formatDate(post.data.updatedDate)
                        : '-'}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {formatBoolean(post.data.isDraft)}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {formatArray(post.data.tags)}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {post.data.slug || '-'}
                    </td>
                    <td class="border border-gray-300 p-2">
                      {formatBoolean(post.data.hidePageHeroImage)}
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </div>
</Layout>
