---
import { applyDateEntries, getPublishedContent } from '@/helpers/astro';
import EntriesList from '@components/layout/entries-list.astro';
import Layout from '@layouts/three-body.astro';

const entries = await getPublishedContent(true);

const entriesWithDates = applyDateEntries(entries);
---

<Layout title="ODGN Blog" description="A collection of posts and notes">
  <EntriesList entries={entriesWithDates} />
</Layout>
