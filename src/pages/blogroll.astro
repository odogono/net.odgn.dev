---
import { getBlogroll } from '@helpers/blogroll';
import Layout from '@layouts/three-body.astro';

const blogroll = getBlogroll();
const entries = Object.entries(blogroll).sort((a, b) =>
  a[1].author.localeCompare(b[1].author)
);
---

<Layout title="Blogroll">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl text-ring font-['Nohemi'] font-light my-12">
      Blogroll
    </h1>
    <div class="grid gap-4">
      {
        entries.map(([key, entry]) => (
          <div class="post-summary border hover:border-accent rounded-lg cursor-pointer relative">
            <a
              href={entry.site}
              style="display: inline-block; width: 100%; height: 100%; position: absolute; top: 0; left: 0;"
            />
            <div class="flex flex-col m-6 justify-between">
              <h3 class="title font-['Nohemi'] text-xl">{entry.author}</h3>
              <p class="description text-md">{entry.site}</p>
            </div>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
