---
import BaseHead from '@components/layout/base-head.astro';
import Footer from '@components/layout/footer.astro';
import Header from '@components/layout/header.astro';
import ThemeInit from '@components/theme/theme-init.astro';
import Tracker from '@helpers/tracker.astro';

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <ThemeInit />
  </head>

  <body class="min-h-screen flex flex-col">
    <Header />
    <main
      class="flex justify-center items-start max-w-full m-4 flex-grow mt-12">
      <aside class="hidden lg:block w-1/3">
        <slot name="sidebar-left" />
      </aside>

      <div class="w-full lg:w-2/3 max-w-2xl mx-4">
        <slot />
        <div class="mt-12"><slot name="article-footer" /></div>
      </div>

      <aside class="hidden lg:block w-1/3">
        <slot name="sidebar-right" />
      </aside>
    </main>

    <Footer />
    <Tracker />
  </body>
</html>
