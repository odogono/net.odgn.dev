---
import { isToday } from '@helpers/date';

interface Props {
  dates: Date[];
}

const { dates } = Astro.props;

const [ start, end ] = dates;

const startYear = start.getFullYear();

const endLabel = isToday(end) ? '' : end.getFullYear();

const isSameYear = startYear === end.getFullYear() && !isToday(end);

---

<>
  <time datetime={start.toISOString()}>
    {startYear}
  </time>
  {!isSameYear && (
    <>
      -
    </>
  <time datetime={end.toISOString()}>
    {isToday(end) ? '' : end.getFullYear()}
  </time>
    )}
</>
